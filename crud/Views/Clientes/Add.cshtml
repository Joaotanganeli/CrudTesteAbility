@model crud.Models.AddClienteViewModel

<h1>Add Clientes</h1>

<form method="post" action="Add">
    <div class="mb-3">
      <label for="" class="form-label">Nome</label>
      <input type="text" id="" class="form-control" asp-for="Nome">
    </div>
    <div class="mb-3">
      <label for="" class="form-label">cpf</label>
      <input type="cpf" id="" class="form-control" asp-for="cpf">
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Telefone</label>
      <input type="number" id="" class="form-control" asp-for="Telefone">
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Data de Nascimento</label>
      <input type="date" id="" class="form-control" asp-for="DataNascimento">
    </div>

    <button type="submit" class="btn btn-primary"> ADD </button>
</form>