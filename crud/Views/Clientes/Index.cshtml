@model List<crud.Models.Cliente>

@{
}

<h1>Clientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Telefone</th>
            <th>Data Nascimento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.cpf</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.DataNascimento.ToString("dd-MM-yyyy")</td>
                <td><a href="Clientes/View/@cliente.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>